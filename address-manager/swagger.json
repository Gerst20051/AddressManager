{
  "swagger": "2.0",
  "info": {
    "description": "This is the api documentation for the address manager.",
    "version": "1.0.0",
    "title": "Address Manager"
  },
  "host": "hnswave.co",
  "basePath": "/dev",
  "tags": [
    {
      "name": "addresses",
      "description": "endpoints for addresses"
    }
